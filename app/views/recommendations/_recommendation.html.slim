.recommendations
  = link_to recommendation.course
    - if recommendation.is_obligatory
      .participation-obligatory
        = t('recommendation.obligatory')
    - else
      .participation-recommended
        = t('recommendation.recommended')
    .course-image
      - if recommendation.course.imageId
        = image_tag(recommendation.course.imageId)
      - else
        img src="/data/icons/courses-list-std.png"
    .course-info
      .name
        = recommendation.course.name
      // placeholder
      | rating: 5 Stars
      .provider
        // TODO : Change to provider logo
        img src="/data/logo-openSAP.png"
      = raw recommendation.course.abstract
  .comment

    .profile-picture
      - if recommendation.user.profile_image_id
        img src=recommendation.user.profile_image_id
      - else
        img src="/data/default.png"
    = link_to recommendation.user
      = "#{recommendation.user.first_name} #{recommendation.user.last_name}"
    - if recommendation.text.empty?
      - if group
        - if recommendation.is_obligatory
          = t('recommendation.group.pledged_by')
        - else
          = t('recommendation.group.recommended_by')
      - else
        - if recommendation.is_obligatory
          = t('recommendation.pledged_by')
        - else
          = t('recommendation.recommended_by')
    - else
      = ": #{recommendation.text}"
