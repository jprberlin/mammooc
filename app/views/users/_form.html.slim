h3
  = t('users.settings.personal_data')

= form_for(@user, html: { class: 'form-horizontal', role: 'form', multipart: true }) do |f|
  - if @user.errors.any?
    .alert.alert-danger.alert-dismissable role="alert"
      button.close type="button" data-dismiss="alert"
        span aria-hidden="true"
          | &times;
        span.sr-only
          | Close
      h4= "#{pluralize(@user.errors.count,"error")} prohibited this user from being saved:"
      ul
        - @user.errors.full_messages.each do |msg|
          li= msg

  .form-group
    .text-left
      = f.label :full_name, class:'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :full_name, class: 'form-control'
  .form-group
    .text-left
      = f.label :about_me, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_area :about_me, class: 'form-control'
  .form-group
    .text-left
      = f.label :profile_image, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.file_field :profile_image
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit t('users.settings.update_account'), class: 'btn btn-primary mr5'

  br /
  br /
  br /
  br /
