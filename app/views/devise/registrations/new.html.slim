h2
  = t('users.sign_in_up.sign_up')
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  .form-group
    = f.label :full_name, t('users.sign_in_up.full_name')
    br
    = f.text_field :full_name, :class => 'form-control', :value => session.has_key?(:resource) ? session[:resource]['full_name'] : ''
  .form-group
    = f.label :primary_email, t('users.sign_in_up.email')
    br
    = f.email_field :primary_email,  :class => 'form-control', :value => session.has_key?(:resource) ? session[:resource]['primary_email'] : '', :id => 'registration_email'
  .form-group
    = f.label :password, t('users.sign_in_up.password')
    - if @minimum_password_length
      em
        |  (
        = @minimum_password_length
        = ' ' + t('users.sign_in_up.characters_minimum') +')'
    br
    = f.password_field :password, :class => 'form-control', autocomplete: "off", :id => 'registration_password'
  .form-group
    = f.label :password_confirmation, t('users.sign_in_up.password_confirmation')
    br
    = f.password_field  :password_confirmation, :class => 'form-control', autocomplete: "off", :id => 'registration_password_confirmation'
  .actions
    = f.submit t('users.sign_in_up.sign_up'), :class => 'btn btn-primary', :id => 'submit_sign_up'
= render "devise/shared/links"
