h2
  = t('sign_up')
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  .field
    = f.label :first_name, t('first_name')
    br
    = f.text_field :first_name , :class => 'form-control'
  .field
    = f.label :last_name, t('last_name')
    br
    = f.text_field :last_name, :class => 'form-control'
  .field
    = f.label :email, t('email')
    br
    = f.email_field :email, autofocus: true, :class => 'form-control', :id => 'registration_email'
  .field
    = f.label :password, t('password')
    - if @validatable
      em
        |  (
        = @minimum_password_length
        = ' ' + t('characters_minimum') +')'
    br
    = f.password_field :password, :class => 'form-control', autocomplete: "off", :id => 'registration_password'
  .field
    = f.label :password_confirmation, t('password_confirmation')
    br
    = f.password_field  :password_confirmation, :class => 'form-control', autocomplete: "off"
  .checkbox
    = label_tag :agb_confirmation
      = check_box_tag :agb_confirmation
      = t('agb_confirmation')

  .actions
    = f.submit t('sign_up'), :class => 'btn btn-primary', :id => 'submit_sign_up'
= render "devise/shared/links"